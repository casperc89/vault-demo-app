@model SecretGenerator.Models.TotpConfirmationViewModel

@{
    ViewData["Title"] = "ConfirmTwoFactorAuth";
}

<h2>Confirm 2FA setup</h2>
<hr />

<div class="row">
    <p>2FA is activated. Use this QR code to setup your 2FA client.</p>
    <img src="data:image/png;base64,@Model.TotpBase64EncodeBarcode" />

</div>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ConfirmTwoFactorAuth">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TotpCode" class="control-label"></label>
                <input asp-for="TotpCode" class="form-control" />
                <span asp-validation-for="TotpCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Validate" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

