@model SecretGenerator.Models.LoginTotpViewModel

@{
    ViewData["Title"] = "LoginTotp";
}

<h2>2FA Login</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginTotp" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TotpCode" class="control-label"></label>
                <input asp-for="TotpCode" class="form-control" />
                <span asp-validation-for="TotpCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

